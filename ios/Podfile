platform :ios, '15.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# âœ… CDN ÙÙ‚Ø· (Ø¨Ø¯ÙˆÙ† Git)
source 'https://cdn.cocoapods.org/'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(
    File.join('..', 'Flutter', 'Generated.xcconfig'),
    __FILE__
  )
  raise "#{generated_xcode_build_settings_path} must exist" unless File.exist?(generated_xcode_build_settings_path)

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
end

require File.expand_path(
  File.join('packages', 'flutter_tools', 'bin', 'podhelper'),
  flutter_root
)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static

  # âœ… REQUIRED for Firebase Swift pods
  pod 'GoogleUtilities', :modular_headers => true
  pod 'nanopb', :modular_headers => true
  pod 'GoogleDataTransport', :modular_headers => true

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'

      # Apple Silicon simulator fix
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'x86_64'

      # ðŸ”¥ CRITICAL: Fix gRPC + Xcode 26
      config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'gnu++17'
      config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
    end

    # ðŸ”¥ Remove invalid flags from gRPC / BoringSSL
    if target.name.include?('gRPC') || target.name.include?('BoringSSL')
      target.source_build_phase.files.each do |file|
        if file.settings&.dig('COMPILER_FLAGS')
          flags = file.settings['COMPILER_FLAGS']
          flags = flags.split.reject { |f| f == '-G' || f == '-std=c++20' }.join(' ')
          file.settings['COMPILER_FLAGS'] = flags
        end
      end
    end
  end
end
